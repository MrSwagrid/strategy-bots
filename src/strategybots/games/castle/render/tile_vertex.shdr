#version 400 core

in vec2 vertex;
in vec2 texmap;

out vec2 texmap_;

uniform vec2 position;
uniform vec2 size;
uniform float depth;

uniform vec2 screenSize;

void main(void) {
	
	gl_Position = vec4((vertex * size + position) * 2.0 / screenSize, 1.0 - depth, 1.0);
	texmap_ = texmap;
}